# 达梦数据库配置示例
# 复制此文件为 .env.dm8 并填写实际配置

# 数据库类型
DB_TYPE=dm8

# 达梦数据库配置
DM_HOST=localhost
DM_PORT=5236
DM_DATABASE=PAIZHU
DM_USER=paizhu_user
DM_PASSWORD=your_password_here

# JWT配置
JWT_SECRET=paizhu_secret_key_change_in_production
JWT_EXPIRES_IN=7d

# 服务器配置
PORT=3000
NODE_ENV=development

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800
